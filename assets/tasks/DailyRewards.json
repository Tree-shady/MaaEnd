{
    "task": [
        {
            "name": "DailyRewards",
            "label": "$task.DailyRewards.label",
            "entry": "DailyRewardStart",
            "description": "$task.DailyRewards.description",
            "option": [
                "DailyEmailRewards",
                "DailyTaskRewards"
            ],
            "controller": [
                "Win32",
                "Win32-Front",
                "Win32-Window"
            ]
        }
    ],
    "option": {
        "DailyEmailRewards": {
            "type": "switch",
            "label": "$option.DailyEmailRewards.label",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "DailyEmailRewardSub": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "DailyEmailRewardSub": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "DailyTaskRewards": {
            "type": "switch",
            "label": "$option.DailyTaskRewards.label",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "DailyTaskRewardSub": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "DailyTaskRewardSub": {
                            "enabled": false
                        }
                    }
                }
            ]
        }
    }
}
